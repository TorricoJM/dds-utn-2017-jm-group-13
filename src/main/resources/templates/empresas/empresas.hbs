{{#partial "contenido"}}
<div class="container">
	<ul class="justify-content-center">
	<h1 class="text-center titulo"><u>Lista de Empresas</u></h1>

	<table class="table table-striped table-bordered table-responsive">
		<tbody>	
			{{#each empresas}}
				<tr>
					<td>
						{{nombre}}
						<a class="badge badge-info" href="/empresas/consultaCuentas?empresa={{nombre}}" title="">Ver cuentas</a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
	</ul>
</div>

{{/partial}}

{{>layout.hbs}}