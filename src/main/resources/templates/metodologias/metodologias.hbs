{{#partial "contenido"}}

<h1>Evaluar una metodologia</h1>

<table class="table table-striped table-bordered table-responsive metodologias">
	<tr>
		<form action="/metodologias" method="POST">
			<th>
				<label for="elegirMetodologia"> Seleccionar metodologia </label>
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="elegirMetodologia">
					{{#each Metodologias}}
						<option name="metodologia">{{this.nombre}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<label> Periodo Inicial </label>
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="perIni">
					{{#each periodos}}
						<option name="perIni">{{this}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<label> Periodo Final </label> 
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="perFin">
					{{#each periodos}}
						<option name="perFin">{{this}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<a href="/metodologias" class="btn btn-info" role="button">Evaluar</a>
			</th>
		</form>
	</tr>
</table>

<ul>
	{{#if author}}
		<h1>Hola</h1>
	 {{/if}}
	{{#each resultados}}
		<li>{{this.nombre}}</li>
	{{/each}}
</ul>

{{/partial}}

{{>layout.hbs}}
