{{#partial "contenido"}}

<h1>Evaluar una metodologia</h1>

<table class="table table-striped table-bordered table-responsive metodologias">
	<tr>
		<form action="/metodologias" method="POST">
			<th>
				<label for="elegirMetodologia"> Seleccionar metodologia </label>
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="elegirMetodologia" name="metodologia">
					{{#each Metodologias}}
						<option>{{this.nombre}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<label> Periodo Inicial </label>
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="perIni" name="perIni">
					{{#each periodos}}
						<option>{{this}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<label> Periodo Final </label> 
			</th>
			<th>
				<div class="form-group">
				  <select class="form-control" id="perFin" name="perFin">
					{{#each periodos}}
						<option>{{this}}</option>
					{{/each}}
				  </select>
				</div>
			</th>
			<th>
				<button class="btn btn-info"  name="Submit" value="Submit" type="Submit">Evaluar</button>
			</th>
		</form>
	</tr>
</table>


	<h3> Cuentas que cumplen: </h3>
	{{#each resultados}}
		<li style="padding-left: 20px;">{{this.nombre}}</li>
	{{/each}}


{{/partial}}

{{>layout.hbs}}
