{{#partial "contenido"}}
<h5 class="info">Empresa: {{empresa}}</h5>
<h5 class="info">Periodo: {{periodo}}</h5>
<table class="table table-striped table-bordered table-responsive tabla">
  <thead>
    <tr class="table-info">
      <th>Indicador</th>
      <th>Resultado</th>
    </tr>
  </thead>
  <tbody>
    {{#each resultados}}
    <tr>
      <td>{{this.nombre}}</td>
      <td>{{this.valor}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<style>
  table.tabla{
  margin: auto;
  border-collapse: collapse;
  width: 50%;
  }

  h5.info{
    text-align: center;
  }
</style>
{{/partial}}

{{>layout.hbs}}